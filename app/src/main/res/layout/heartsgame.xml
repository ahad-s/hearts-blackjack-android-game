<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@drawable/green_cloth"

    android:id="@+id/heartsgame_layout">




    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mikey_layout"
        android:background="@drawable/background_left"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/sloth_mike"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/new_sloth"
            />


        <TextView
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical|center_horizontal"
            android:text="0"
            android:background="@drawable/orange_button"
            android:textColor="#000000"
            android:id="@+id/mikey_scoreview"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/sloth_mike"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/mikey_textview">

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/sloth_mike"
            android:layout_marginBottom="5dp"
            android:text="Mikey"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/mikey_textview">


        </TextView>

    </RelativeLayout>




    <!-- HEIGHT = 80 + 25 + 10 = 115 + extra -->


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/jamie_layout"
        android:background="@drawable/background_right"
        android:layout_centerVertical="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/sloth_jamie"
            android:src="@drawable/sloth_jamie"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/orange_button"
            android:layout_marginBottom="5dp"
            android:text="0"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/jamie_textview"
            android:layout_marginRight="10dp"
            android:id="@+id/jamie_scoreview"
            android:layout_above="@+id/sloth_jamie"
            android:layout_alignTop="@+id/jamie_textview"
            android:layout_alignStart="@+id/sloth_jamie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/sloth_jamie"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Jamie"
            android:textColor="#000000"
            android:id="@+id/jamie_textview">

        </TextView>


        </RelativeLayout>








    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/hearts_settings_button"
        android:background="@drawable/settings"
        android:layout_below="@+id/must_select_three_cards"
        android:layout_alignEnd="@+id/current_hand_space"
        android:layout_marginTop="19dp">

    </ImageView>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/diane_layout"
        android:background="@drawable/background_top"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/sloth_diane"
            android:src="@drawable/sloth_diane"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">

        </ImageView>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:background="@drawable/background_left"
        android:layout_toRightOf="@id/diane_layout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-2dp"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Diane"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/diane_textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </TextView>


        <TextView
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/diane_textview"
            android:layout_marginLeft="10dp"
            android:id="@+id/diane_scoreview"
            android:background="@drawable/orange_button"
            >

        </TextView>

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/arrow_pass"
        android:src="@drawable/arrow_left_noglow"
        />


    
    <ImageView
